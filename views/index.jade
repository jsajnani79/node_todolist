extends layout

block content
	h1 APP

	div#initialContent
		= appData

	div.app
	
	script(id="listtemplate", type="text/x-handlebars")
		<a href="#" class="name"> {{ name }} </a>

	script(id="listindextemplate", type="text/x-handlebars")
		<div id="todoapp">
		<header> TODO Lists	</header>
		<section id="main">
		<ul id="lists"></ul>
		</section>
		<footer>
		<a href="#" class="create"> CREATE </a>		
		</footer>
		</div>

	script(id="tasktemplate", type="text/x-handlebars")
		<div class="task">
		<div class="view">
		<input class="toggle" type="checkbox" {{isChecked checked}} />
		<label>{{taskName}}</label>
		<a class="destroy"></a>\
		</div>
		<input class="edit" type="text" value="{{taskName}}" />
		</div>

	script(id="taskcollectiontemplate", type="text/x-handlebars")
		<div id="todoapp">
		<header>
		<h4 id="title"></h4>
		</br>
		<input id="new-todo" type="text" placeholder="What needs to be done?">
		</header>
		<section id="main">
		<ul id="todo-list"></ul>
		</section>
		<footer>
		<a id="clear-completed">Clear completed</a>
		<div id="todo-count"></div>
		</footer>
		</div>
